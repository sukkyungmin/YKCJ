<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="DMSGalaxy.Main.F_8._01.F8_01"  Loaded="Page_Loaded"
      mc:Ignorable="d" 
      d:DesignHeight="760" d:DesignWidth="1150"
	 Title="F8_01" Width="1774" Height="991" Background="White">
    
    <Page.Resources>
        
        <!--<Style x:Key="ButtonBackCol" TargetType="Button">
            <Setter Property="Background" Value="White" />
            <Setter Property="Foreground" Value="#2FACE2"/>
            <Setter Property="BorderBrush" Value="#EFEFEF"/>
