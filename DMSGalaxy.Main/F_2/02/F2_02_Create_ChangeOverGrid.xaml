                            <DataTrigger Binding="{Binding Value}" Value="GRADE">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/icon_4_03.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Value}" Value="COUNT">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/icon_3_02.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Value}" Value="CODE">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/icon_1_02.png"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </DataTemplate>-->

        <DataTemplate x:Key="Columnheader">
            <StackPanel Orientation="Horizontal">
                <Image   Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="CODE">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_CODE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="NAME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_NAME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="시작시간">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_RunTime.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="종료시간">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_DownTime.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="CHANGE">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TYPE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="ALL TIME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TIME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="CHANGE TIME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TIME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="RUN TIME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TIME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="WASTE">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_WASTE.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#938F8F" FontWeight="Bold" Margin="10,0,0,0">
                </TextBlock>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="Nont">
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" FontSize="20" Foreground="Red" Grid.Column="1"/>
        </DataTemplate>

        <!--<Style x:Key="GroupBolumnSummaryColorButtom" TargetType="{x:Type dxg:he}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dxg:HeaderFillControl}">
                        <Border Background="{TemplateBinding Background}" 
                             BorderBrush="Red" 
                             BorderThickness="0,0,0,10" 
                             Padding="{TemplateBinding Padding}"
                             Width="{Binding Column.ActualHeaderWidth}">
                            <ContentPresenter x:Name="PART_Content" 
                                           Content="{Binding}" 
                                           ContentTemplate="{Binding View.GroupColumnSummaryItemTemplate}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
