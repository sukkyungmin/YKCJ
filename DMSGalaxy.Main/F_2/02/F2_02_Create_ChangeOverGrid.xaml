        <Style TargetType="{x:Type dxg:BackgroundBorderControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border BorderThickness="0,0,0,0" BorderBrush="{DynamicResource {dxgt:GridRowThemeKey ResourceKey=GridDataRowDelimiterBrush, ThemeName=MetropolisLight}}" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="dxg:ColumnBase.HeaderPresenterType" Value="Headers" />
        </Style>


        <Style x:Key="GroupColumnSummaryControl" TargetType="{x:Type dxg:GroupColumnSummaryControl}">
            <Setter Property="Background" Value="{x:Null}"/>
            <Setter Property="BorderBrush" Value="{x:Null}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="{DynamicResource {dxgt:GroupRowThemeKey ResourceKey=GroupColumnSummaryPadding}}" />
            <Setter Property="NormalBorderBrush" Value="{DynamicResource {dxgt:GridRowThemeKey ResourceKey=GridDataRowDelimiterBrush}}" />
            <Setter Property="FocusedBorderBrush" Value="{DynamicResource {dxgt:GroupRowThemeKey ResourceKey=GroupColumnSummaryFocusedBorderBrush}}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type dxg:GroupColumnSummaryControl}">
                        <Border Background="{TemplateBinding Background}" 
                             BorderBrush="Transparent" 
                             BorderThickness="0" 
                             Padding="{TemplateBinding Padding}"
                             Width="{Binding Column.ActualHeaderWidth}">
                            <ContentPresenter x:Name="PART_Content" 
                                           Content="{Binding}" 
                                           ContentTemplate="{Binding View.GroupColumnSummaryItemTemplate}" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="GroupSummaryTextBlock">
            <TextBlock Text="{Binding Value}" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0,0,10,0" FontWeight="Bold" >
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="#FF8D8C8C"/>
                        <Setter Property="FontSize" Value="18"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <!--<Style.Triggers>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="TOTAL">
                                <Setter Property="Foreground" Value="Blue"/>
                                <Setter Property="FontSize" Value="30"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="WASTE">
                                <Setter Property="Foreground" Value="GreenYellow"/>
                                <Setter Property="FontSize" Value="40"/>
                            </DataTrigger>
                        </Style.Triggers>-->
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </DataTemplate>

        <!-- Group Index Colum -->
        <DataTemplate x:Key="GroupSummaryTextBlock1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="DAYS"  HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0,3,10,0" FontSize="14" FontWeight="Bold" Foreground="#FF8D8C8C" Grid.Column="0"/>
                <TextBlock Text="{Binding Value}" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0" FontSize="18" FontWeight="Bold" Foreground="#626262" Grid.Column="1"/>
            </Grid>
        </DataTemplate>

    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="1"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Background="Gray" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="1"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="1"/>
            </Grid.ColumnDefinitions>

            <dxg:GridControl x:Name="maingrid" AutoGenerateColumns="AddNew" SelectionMode="Row"  Grid.Row="1" Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
                                                  dx:ThemeManager.ThemeName="Office2016White"   ShowBorder="False" ItemsSource="{Binding F2_dataTable}" ShowLoadingPanel="{Binding Show}"
                                                   ItemsSourceChanged="maingrid_ItemsSourceChanged"  >

                <dxg:GridControl.View>
                    <dxg:TableView 
                                                    RowMinHeight="50" AllowPerPixelScrolling="True" ShowTotalSummary="True"  GroupColumnSummaryContentStyle="{StaticResource ResourceKey= GroupColumnSummaryControl}"
                                                     AutoWidth="True" NavigationStyle="None"   GroupSummaryDisplayMode="AlignByColumns"  GroupColumnSummaryItemTemplate="{StaticResource GroupSummaryTextBlock}"                                                  
                                                    AllowGrouping="True" ShowGroupPanel="False" HeaderPanelMinHeight="50"  AllowResizing="False" AllowColumnFiltering="False" 
                                                    Background="{x:Null}" AllowEditing="True" AllowColumnMoving="False" AllowSorting="False"   AllowBestFit="True" 
                                                    GroupValueTemplate="{StaticResource GroupSummaryTextBlock1}"> 
                        <!--<dxg:TableView.CellStyle>
                            <Style BasedOn="{StaticResource {dxgt:GridRowThemeKey ResourceKey=LightweightCellStyle}}" TargetType="{x:Type dxg:LightweightCellEditor}">
                                <Setter Property="BorderBrush" Value="{x:Null}"/>
                            </Style>
                        </dxg:TableView.CellStyle>-->
                        <!--<dxg:TableView.FormatConditions>
                            <dxg:FormatCondition Expression=""{Binding Path=SHIFT }" "
                        </dxg:TableView.FormatConditions>-->

                        <!--GroupColumnSummaryElementStyle="{StaticResource SummaryStyle}"-->

                        <!--그룹 서머리 관련 텍스트 정렬 활용-->
                        <!--<dxg:TableView.GroupSummaryContentStyle>
                            <Style xmlns:dxgt="http://schemas.devexpress.com/winfx/2008/xaml/grid/themekeys" xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" TargetType="dx:DataContentPresenter" BasedOn="{StaticResource {dxgt:TotalSummaryThemeKey ResourceKey=TotalSummaryContentStyle}}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Column.FieldName}" Value="TOTAL">
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </dxg:TableView.GroupSummaryContentStyle>-->

                    </dxg:TableView>
                </dxg:GridControl.View>
                <dxg:GridControl.Columns>

                    <dxg:GridColumn Header="DAYS" FieldName="DAYS"   Visible="False" GroupIndex="0"/>
                    <dxg:GridColumn Header="CODE" FieldName="CODE"  Width="110" FixedWidth="True" HorizontalHeaderContentAlignment="Center" 
                                                              HeaderTemplate="{StaticResource Columnheader}" CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="NAME" FieldName="NAME"  Width="350" FixedWidth="True" HorizontalHeaderContentAlignment="Center"  
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="시작시간" FieldName="STARTTIME"  FixedWidth="False" HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="종료시간" FieldName="ENDTIME"   FixedWidth="False" HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="CHANGE" FieldName="CHANGE"  FixedWidth="False"  HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="ALL TIME" FieldName="ALLTIME"  FixedWidth="False" HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="CHANGE TIME" FieldName="CHANGETIME"  FixedWidth="False" HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="RUN TIME" FieldName="RUNNINGTIME"  FixedWidth="False"  HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />
                    <dxg:GridColumn Header="WASTE" FieldName="WASTECOUNT"  FixedWidth="False"  HorizontalHeaderContentAlignment="Center" 
                                                             HeaderTemplate="{StaticResource Columnheader}"  CellTemplate="{StaticResource CellColumBlock}" />

                </dxg:GridControl.Columns>

                <dxg:GridControl.GroupSummary>
                    <dxg:GridSummaryItem FieldName="WASTECOUNT" SummaryType="Sum" DisplayFormat=" {0:n0}" ShowInColumn=""/>
                </dxg:GridControl.GroupSummary>
                <dxg:GridControl.TotalSummary>
                    <dxg:GridSummaryItem  FieldName="WASTECOUNT" SummaryType="Sum" DisplayFormat=" {0:n0}" ShowInColumn=""/>
                </dxg:GridControl.TotalSummary>
            </dxg:GridControl>

        </Grid>

    </Grid>
</Page>
