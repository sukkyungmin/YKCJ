                <TextBlock Text="{Binding Value}" HorizontalAlignment="Right" VerticalAlignment="Center" Padding="0" FontSize="18" FontWeight="Bold" Foreground="#626262" Grid.Column="1"/>
            </Grid>
        </DataTemplate>

        <Style x:Key="SummaryStyle" TargetType="Run">
            <Setter Property="FontWeight" Value="Normal"/>
            <Style.Triggers>
                <DataTrigger Binding="{DXBinding '(int)Value le 40'}" Value="True">
                    <Setter Property="Foreground" Value="Red"/>
                </DataTrigger>
                <DataTrigger Binding="{DXBinding '(int)Value gt 40 and (int)Value lt 70'}" Value="True">
                    <Setter Property="Foreground" Value="Orange"/>
                </DataTrigger>
                <DataTrigger Binding="{DXBinding '(int)Value ge 70'}" Value="True">
                    <Setter Property="Foreground" Value="Green"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ComboAllCheck" TargetType="{x:Type  CheckBox}">
            <Setter Property="IsChecked" Value="False"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding ElementName=Cb_ColumnsAllCheck, Path=IsChecked}" Value="True">
