    <Page.Resources>

        <!-- Cell Colum -->
        <DataTemplate  x:Key="CellColumBlock">
            <TextBlock  VerticalAlignment="Center" FontFamily="Arial"  FontSize="14">
                <TextBlock.Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="Padding" Value="0,0,20,0"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property ="Text" Value="{Binding Path=Value, StringFormat={}{0:#,##0;0;-}}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="CODE">
                                <Setter Property="Foreground" Value="#FF8D8C8C"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="NAME">
                                <Setter Property="Foreground" Value="#C4C4C4"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Padding" Value="10,0,0,0"/>
                                <Setter Property="TextWrapping" Value="Wrap"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="TIME">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="WASTE%">
                                <Setter Property ="Text" Value="{Binding Path=Value, StringFormat={}{0:0.0;}}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="WASTEBOX%">
                                <Setter Property ="Text" Value="{Binding Path=Value, StringFormat={}{0:0.0;}}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="DELAY%">
                                <Setter Property ="Text" Value="{Binding Path=Value, StringFormat={}{0:0.0;}}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="PRODUCTIVITY">
                                <Setter Property ="Text" Value="{Binding Path=Value, StringFormat={}{0:0.0;}}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Column.FieldName}" Value="OEE2">
                                <Setter Property ="Text" Value="{Binding Path=Value, StringFormat={}{0:0.0;}}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Style>
            </TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="CellColumImage">
            <Image Width="25" Height="25" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image.Style>
                    <Style TargetType="{x:Type Image}">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Value}" Value="1AM">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TYPE_4.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Value}" Value="1PM">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TYPE_2.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Value}" Value="2CH">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TYPE_3.png"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Value}" Value="3CH">
                                <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TYPE_1.png"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Image.Style>
            </Image>
        </DataTemplate>

        <DataTemplate x:Key="Columnheader">
            <StackPanel Orientation="Horizontal">
                <Image   Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image.Style>
                        <Style TargetType="{x:Type Image}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding}" Value="CODE">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_CODE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="NAME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_NAME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="TIME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TIME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="TYPE">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TYPE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="TOTAL">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TOTAL.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="WASTE">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_WASTE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="BOX">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_BOX.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="RUNTIME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_RunTime.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="DOWNTIME">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_DownTime.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="STOPCOUNT">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_DownCount.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="WASTE%">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_WASTE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="WASTEBOX%">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_WASTE.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="DELAY%">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_TIME.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="PRODUCTIVITY">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_Productivity.png"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding}" Value="OEE2">
                                    <Setter   Property="Source" Value="/DMSGalaxy.Main;component/Images/R_OEE.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
                <TextBlock Text="{Binding}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#938F8F" FontWeight="Bold" Margin="10,0,0,0">
                </TextBlock>
            </StackPanel>
        </DataTemplate>

