<UserControl x:Class="DMSGalaxy.Main.F_2._02.F2_02_Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <Label Background="White" Content="Item1" FontSize="50" Foreground="Black" Grid.Column="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="Label1_MouseDown"/>
        <Grid Grid.Column="1" Background="White">
            <DatePicker x:Name="Stime" HorizontalAlignment="Left" Margin="27,26,0,0" Grid.Column="1" VerticalAlignment="Top" Width="137" 
                                    SelectedDate="{Binding Stime, Mode=TwoWay ,TargetNullValue={x:Static sys:DateTime.Now}}"/>
        </Grid>
        <Label Background="White" Content="Item3" FontSize="50" Foreground="Black" Grid.Column="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="Label2_MouseDown"/>

    </Grid>
</UserControl>
