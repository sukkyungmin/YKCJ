		Stretch="Uniform">
        <Canvas
			Height="42"
			Width="42">
            <Canvas
				x:Name="canvas"
				Canvas.Left="21"
				Canvas.Top="21">
                <Line
					x:Name="n"
					Opacity="1"/>
                <Line
					x:Name="ne">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="45" />
                    </Line.RenderTransform>
                </Line>
                <Line
					x:Name="e">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="90" />
                    </Line.RenderTransform>
                </Line>
                <Line
					x:Name="se">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="135" />
                    </Line.RenderTransform>
                </Line>
                <Line
					x:Name="s">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="180" />
                    </Line.RenderTransform>
                </Line>
                <Line
					x:Name="sw"
					Opacity="0.4">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="225" />
                    </Line.RenderTransform>
                </Line>
                <Line
					x:Name="w"
					Opacity="0.6">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="270" />
                    </Line.RenderTransform>
                </Line>
                <Line
					x:Name="nw"
					Opacity="0.8">
                    <Line.RenderTransform>
                        <RotateTransform
							Angle="315" />
                    </Line.RenderTransform>
                </Line>
