        <Canvas  Grid.ColumnSpan="3" Grid.RowSpan="2">
                <Canvas  x:Name="Canvas_Back">
                    <Grid x:Name="grid_main" Width="200" Height="200" HorizontalAlignment="Left" />
                </Canvas>
            </Canvas>
            <Button x:Name="_BtRight"  Height="50" Width="20" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Click="SlideRight_Click" />
        <Button x:Name="_BtLeft" Height="50" Width="20" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Click="SlideLeft_Click"/>
        <Button Height="50" Width="20" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Close_Cleck" />
        <Grid Grid.Row="1" Grid.Column="1" Background="WhiteSmoke">
        </Grid>
    </Grid>
