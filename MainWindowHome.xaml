<Page x:Class="YKCJ_EngineerReport.MainWindowHome"
      xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:MetroChart="clr-namespace:De.TorstenMandelkow.MetroChart;assembly=De.TorstenMandelkow.MetroChart" xmlns:Chart="clr-namespace:C1.WPF.Chart;assembly=C1.WPF.FlexChart.4.5.2"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="1280"
	  Title="MainWindowHome" Width="1350" Height="760" >


    <Grid Background="{StaticResource Gray0Brush}" Margin="6">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="190"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="{StaticResource white0Brush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="SUMMARY DATA (Monthly)" FontSize="24" Foreground="{StaticResource black1Brush}" VerticalAlignment="Center"
                       HorizontalAlignment="Right" Margin="0,0,140,0" FontWeight="Bold"/>
            <Button Width="100" Height="20" Margin="0,0,20,0" HorizontalAlignment="Right" Content="Data Refresh" FontSize="10" Command="{Binding CmdDataReset}"/>
            <TextBlock Grid.Row="1" Text="{Binding GetDataTime, StringFormat=Date {0}}" FontSize="16" Foreground="{StaticResource Gray1Brush}" VerticalAlignment="Center"
                       HorizontalAlignment="Right" Margin="0,0,20,0" FontWeight="Bold"/>
        </Grid>

        <Grid Grid.Row="1" Background="{StaticResource white0Brush}" Margin="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="75*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="20,10,0,0">
                <materialDesign:PackIcon  Height="18" Width="18" Kind="DatabaseSearchOutline" Foreground="#FFF56C6C" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Margin="10,4,0,0"  Text="Total Data" VerticalAlignment="Center"  FontSize="18" Foreground="{StaticResource black1Brush}" FontFamily="{StaticResource MaterialDesignFont}"/>
            </StackPanel>
            <Grid Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Margin="12,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="140"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="발생횟수" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" 
                           Foreground="{StaticResource black1Brush}" Margin="8,0,0,0"/>
                <TextBlock Text="소요시간(분)" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" 
                           Foreground="{StaticResource black1Brush}" Margin="8,0,0,0"/>
                <TextBlock Text="소요시간(시)" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" 
                           Foreground="{StaticResource black1Brush}" Margin="8,0,0,0"/>
                <TextBlock Text="체크시간(분)" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" 
                           Foreground="{StaticResource black1Brush}" Margin="8,0,0,0"/>
                <TextBlock Text="체크시간(시)" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="16" 
                           Foreground="{StaticResource black1Brush}" Margin="8,0,0,0"/>

                <TextBlock Text="{Binding MonthlyTotalData.Rows[0][Counts], StringFormat=\{0:N0\} }" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="16" 
                           Foreground="{StaticResource black0Brush}" FontWeight="Bold" Margin="0,0,80,0"/>
                <TextBlock Text="{Binding MonthlyTotalData.Rows[0][DelayTimeM], StringFormat=\{0:N0\}}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="16" 
                           Foreground="{StaticResource Red0Brush}" FontWeight="Bold" Margin="0,0,80,0"/>
                <TextBlock Text="{Binding MonthlyTotalData.Rows[0][DelayTimeH]}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="16" 
                           Foreground="{StaticResource Red0Brush}" FontWeight="Bold" Margin="0,0,80,0"/>
                <TextBlock Text="{Binding MonthlyTotalData.Rows[0][CheckTimeM], StringFormat=\{0:N0\}}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="16" 
                           Foreground="{StaticResource Blue0Brush}" FontWeight="Bold" Margin="0,0,80,0"/>
                <TextBlock Text="{Binding MonthlyTotalData.Rows[0][CheckTimeH]}" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="16" 
                           Foreground="{StaticResource Blue0Brush}" FontWeight="Bold" Margin="0,0,80,0"/>
            </Grid>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                <materialDesign:PackIcon  Height="18" Width="18" Kind="Allergy" Foreground="#FFF56C6C" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Margin="10,4,0,0"  Text="Stop Top 5 (Machine, Class, Part1, Part2 조합)" VerticalAlignment="Center"  FontSize="18" Foreground="{StaticResource black1Brush}" FontFamily="{StaticResource MaterialDesignFont}"/>
            </StackPanel>

            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.03*"/>
                    <ColumnDefinition Width="0.13*"/>
                    <ColumnDefinition Width="0.13*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.2*"/>
                    <ColumnDefinition Width="0.09*"/>
                    <ColumnDefinition Width="0.09*"/>
                    <ColumnDefinition Width="0.09*"/>
                    <ColumnDefinition Width="0.09*"/>
                    <ColumnDefinition Width="0.09*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Machine" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                <TextBlock Text="Class" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                <TextBlock Text="Part1" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                <TextBlock Text="Part2" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                <TextBlock Text="발생횟수" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="소요시간(분)" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="소요시간(시)" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="체크시간(분)" Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
                <TextBlock Text="체크시간(시)" Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12"/>
            </Grid>
            <ListBox Grid.Column="1" Grid.Row="2" ItemsSource="{Binding MonthlyTop5TotalData}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}">
                        <Setter Property="IsEnabled" Value="False" />
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <!--<Setter Property="VerticalContentAlignment" Value="Stretch"/>-->
                    </Style>
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.03*"/>
                                <ColumnDefinition Width="0.13*"/>
                                <ColumnDefinition Width="0.13*"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="0.2*"/>
                                <ColumnDefinition Width="0.09*"/>
                                <ColumnDefinition Width="0.09*"/>
                                <ColumnDefinition Width="0.09*"/>
                                <ColumnDefinition Width="0.09*"/>
                                <ColumnDefinition Width="0.09*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Foreground="{StaticResource Red0Brush}" Text="{Binding Path=Number}" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                            <TextBlock Text="{Binding Path=Machine}" Foreground="{StaticResource black0Brush}" FontWeight="Black"  Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                            <TextBlock Text="{Binding Path=Class}" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                            <TextBlock Text="{Binding Path=Part1}" Grid.Column="3" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                            <TextBlock Text="{Binding Path=Part2}" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="12"/>
                            <TextBlock Text="{Binding Path=Counts, StringFormat=\{0:N0\}}" Foreground="{StaticResource black0Brush}" FontWeight="Black" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Margin="0,0,30,0"/>
                            <TextBlock Text="{Binding Path=DelayTimeM, StringFormat=\{0:N0\}}" Foreground="{StaticResource Red0Brush}" FontWeight="Black" Grid.Column="6" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding Path=DelayTimeH}" Foreground="{StaticResource Red0Brush}" FontWeight="Black" Grid.Column="7" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding Path=CheckTimeM, StringFormat=\{0:N0\}}" Foreground="{StaticResource Blue0Brush}" FontWeight="Black" Grid.Column="8" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Margin="0,0,20,0"/>
                            <TextBlock Text="{Binding Path=CheckTimeH}" Foreground="{StaticResource Blue0Brush}" FontWeight="Black" Grid.Column="9" VerticalAlignment="Center" HorizontalAlignment="Right" FontSize="12" Margin="0,0,20,0"/>

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <Grid Grid.Row="2" Background="{StaticResource white0Brush}" Margin="2,0,2,2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="20,10,0,0">
                <materialDesign:PackIcon  Height="18" Width="18" Kind="ChartArc" Foreground="#FFF56C6C" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Margin="10,4,0,0"  Text="Total Machine Stop Chart" VerticalAlignment="Center"  FontSize="18" Foreground="{StaticResource black1Brush}" FontFamily="{StaticResource MaterialDesignFont}"/>
            </StackPanel>

            <Chart:C1FlexPie Width="500" Height="400" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
            SelectionMode="Point" Palette="Darkly" Offset="0.1" SelectedItemOffset="0.2"
            ToolTipContent="{}{Machine} &#x000A;소요시간(M) : {DelayTimeM}  &#x000A;소요시간(H) : {DelayTimeH} &#x000A;체크시간(M) : {CheckTimeM}  &#x000A;체크시간(H) : {CheckTimeH}"
            Binding="Counts"
            BindingName="Machine"                             
            ItemsSource="{Binding PieChartView}">
                <Chart:C1FlexPie.SelectionStyle>
                    <Chart:ChartStyle Stroke="red"
                                  StrokeThickness="3"/>
                </Chart:C1FlexPie.SelectionStyle>
                <Chart:C1FlexPie.DataLabel>
                    <Chart:PieDataLabel Content="{}{y}" Position="Outside"/>
                </Chart:C1FlexPie.DataLabel>
            </Chart:C1FlexPie>

            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="20,10,0,0">
                <materialDesign:PackIcon  Height="18" Width="18" Kind="ChartLine" Foreground="#FFF56C6C" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <TextBlock Margin="10,4,0,0"  Text="Total Time Chart (일별 시간 합산)" VerticalAlignment="Center"  FontSize="18" Foreground="{StaticResource black1Brush}" FontFamily="{StaticResource MaterialDesignFont}"/>
            </StackPanel>

            <Chart:C1FlexChart ItemsSource="{Binding LineChartView}" BindingX="Times" Grid.Row="1" Grid.RowSpan="2"
                               Grid.Column="1" ToolTipContent="{}{Times} &#x000A;{y}(분)"  >
                <Chart:Series SeriesName="소요시간(분)" Binding="DelayTimeM" ChartType="SplineSymbols"/>
                <Chart:Series SeriesName="체크시간(분)" Binding="CheckTimeM" ChartType="SplineSymbols"/>
            </Chart:C1FlexChart>


            <!--<c1:C1FlexPie Width="500" Height="400" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2"
            x:Name="flexPie"  SelectionMode="Point"
            Binding="Counts" 
            BindingName="Machine"                             
            ItemsSource="{Binding PieChartView}">
                <Chart:C1FlexPie.SelectionStyle>
                    <Chart:ChartStyle Stroke="Red"
                                  StrokeThickness="2"/>
                </Chart:C1FlexPie.SelectionStyle>
                <Chart:C1FlexPie.DataLabel>
                    <Chart:PieDataLabel Content="{}{Machine}&#x0a;{y}"/>
                </Chart:C1FlexPie.DataLabel>
            </c1:C1FlexPie>-->


        </Grid>
    </Grid>
    

