                <c1:C1RichTextBox Margin="5,0,5,0" x:Name="_C1rtb" Grid.Row="1" BorderThickness="1" Height="437" Text="{Binding Detail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
